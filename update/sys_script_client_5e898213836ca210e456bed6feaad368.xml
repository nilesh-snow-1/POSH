    <sys_script_client action="INSERT_OR_UPDATE">
        <active>true</active>
        <applies_extended>false</applies_extended>
        <condition/>
        <description>This script runs on the "Assigned to" field's onChange event. It checks if the assigned user has a valid email address. If no email is found, the field is cleared, and an alert notifies the user.</description>
        <field/>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>ValidateAssignedUserEmail</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
    if (isLoading || newValue === '') {
        return;
    }

    var ass = g_form.getReference('u_assigned_to', function(assignee) {
        if (!assignee || !assignee.email) {
            g_form.clearValue('u_assigned_to');  // Clear the invalid value
            alert('Assigned person does not have an email address.');
        }
    });
}
]]></script>
