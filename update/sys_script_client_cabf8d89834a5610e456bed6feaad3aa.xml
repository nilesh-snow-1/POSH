        <condition/>
        <description>Set Priority to High for VIP Callers&#13;
If the Caller is marked as VIP, automatically set the Incident Priority to "High."</description>
        <field>u_victim</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Set High Priority for VIP Callers</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    var caller = g_form.getReference('u_victim');
    // Check if caller exists and if they are a VIP
    if (caller.vip == 'true') {
        // Set the Incident Impact and Urgency to High (1)
        g_form.setValue('u_impact', 1);
        g_form.setValue('u_urgency', 1);
    }
}]]></script>
