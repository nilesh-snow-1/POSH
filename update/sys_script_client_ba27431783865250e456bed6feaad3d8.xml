        <field>u_assignee_email_id</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>EmailValidationAndFieldMessageHandler</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue,
isLoading, isTemplate) {
if (isLoading || newValue === '') {
return;
}
var em = g_form.getValue('u_assignee_email_id');
var regex = /^[a-zA-Z0-9_.+-]+@[a-zA-Z0-9-]+\.[a-zA-Z]{2,}$/;
if (regex.test(em)) {
g_form.showFieldMsg('u_assignee_email_id', "Valid", "info");
g_form.hideFieldMsg('u_assignment_group', "Valid test message");
g_form.showFieldMsg('u_assignment_group', "test message");
} else {
g_form.clearValue('u_assignee_email_id');
g_form.showFieldMsg('u_assignee_email_id', "Invalid", "error");
g_form.hideFieldMsg('u_assignment_group', "test message");
g_form.showFieldMsg('u_assignment_group', "Valid test message");
}
}]]></script>
