        <name>Escalate Incident</name>
        <onclick/>
        <order>100</order>
        <script><![CDATA[var gr = new GlideRecord('incident');
gr.initialize();
// Requirement 1
gr.caller_id = current.u_victim;
gr.short_description = current.u_short_notes;
gr.description = current.u_detailed_description;
gr.assignment_group = 'dc0db135c332010016194ffe5bba8f23';

// Requirement 2
if (current.u_type_of_harassment == 'sel') 
{
    gr.impact = 1;
    gr.urgency = 1;
}
else 
{
    gr.impact = 1;
    gr.urgency = 2;
}
gr.insert();


current.u_incident = gr.sys_id;
current.update();
action.setRedirectURL(current);
gs.addInfoMessage("This posh request has been escalated as : "+ gr.number);
