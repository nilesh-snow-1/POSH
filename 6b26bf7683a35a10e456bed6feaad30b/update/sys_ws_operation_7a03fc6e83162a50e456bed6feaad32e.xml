        <name>create</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {
    var body = request.body.data;  // JSON input
    var result = {};

    // Basic validation
    if (!body.short_description || !body.caller_id) {
        response.setStatus(400);
        result.error = "short_description and caller_id are required";
        response.setBody(result);
        return;
    }

    var gr = new GlideRecord('incident');
    gr.initialize();
    gr.short_description = body.short_description;
    gr.caller_id = body.caller_id;
    gr.urgency = body.urgency || "3";  // default to low urgency
    gr.insert();

    result.message = "Incident created successfully";
    result.number = gr.getValue("number");
    result.sys_id = gr.getUniqueValue();

    response.setStatus(201);
    response.setBody(result);
})(request, response);]]></operation_script>
