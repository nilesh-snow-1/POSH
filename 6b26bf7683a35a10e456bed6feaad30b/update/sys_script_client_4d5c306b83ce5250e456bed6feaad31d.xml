        <name>Display Conditional Messages</name>
        <order/>
        <script><![CDATA[function onSubmit() {
    // Get the value of the 'u_type_of_harassment' field
    var harassmentType = g_form.getValue('u_type_of_harassment');
    
    // Check if the selected value is 'Racial'
    if (harassmentType === 'rac') {
        g_form.addErrorMessage("Error: Racial harassment is not allowed and must be addressed immediately."); // Display an error message
        g_form.addInfoMessage("Info: Please escalate the issue for further investigation."); // Display an informational message
        return false; // Prevent form submission
    }
    
    // Additional logic (if any) can go here
    return true; // Allow form submission
}
]]></script>
