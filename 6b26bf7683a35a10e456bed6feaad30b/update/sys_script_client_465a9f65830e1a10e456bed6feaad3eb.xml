        <condition/>
        <description>**Alert for Missing Email on 'Assigned To'**  &#13;
   If the **'Assigned To'** field is selected with a user who doesnâ€™t have an email ID, display an alert message and clear the **'Assigned To'** field value.</description>
        <field>u_assignment_to</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Validate Assigned To Email</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
    if (isLoading || newValue === '') {
        return;
    }

    // Run this script when the field value changes
    g_form.getReference('u_assignment_to', function(reference) {
        if (reference && reference.email) {
            // Display the referenced email in an alert
            alert('Assigned To Email: ' + reference.email);

            // Optionally set the value to a field on the form
            g_form.setValue('u_assignment_to', reference.email);
        } else {
            alert('No email found for the selected assignee.');
        }
    });
}
]]></script>
